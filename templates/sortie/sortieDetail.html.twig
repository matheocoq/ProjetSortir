{% extends 'base.html.twig' %}

{% block title %}

    {{ parent() }} | Detail a sortie

{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="text-center mt-3">Detail de la sortie</h1>

        <div class="d-flex mt-5 mb-3 row">
            {% for key, info in infos %}
                <div class="col-6 mb-2">
                    <div class="row">
                        <div class="col">
                            <label for="{{ key }}" class="form-label">{{ key }}:</label>
                        </div>
                        <div class="col">
                            {% if (key == 'Date et heure de la sortie') or (key == 'Date limite d\'inscription') %}
                                {% set info = info|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") %}
                            {% endif %}
                            <input type="text" readonly class="form-control-plaintext" id="{{ key }}" value="{{ info }}">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in sortie.inscriptions %}
            <tr>
                <td><a href="{{ path('user_detail', {id: inscription.participant.id}) }}" class="text-decoration-none fw-bold text-dark link-primary">{{ inscription.participant.pseudo }}</a> </td>
                <td>{{ inscription.participant.nom }} {{ inscription.participant.prenom }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}